
<div class="container">
  <div class="row">
    <h1>Chat room</h1>

    <% @chats.each do |chat| %>
      <p><%= chat.content %></p>
    <% end %>

    <!-- ここにあたらしいメッセージを追加する -->
      <div id="new_message">
        <%= form_with(model: @chat) do |f| %>
          <%= f.text_field :content %>
          <%= f.submit %>
        <% end %>
      </div>
  </div>
</div>
