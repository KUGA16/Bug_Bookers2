<!-- コメント一覧 -->
<% book.book_comments.each do |book_comment| %>
  <span class="comment">
    <div class="comment-body bb">
      <div class="comment-avatar">
        <div class="avatar">
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: 'no-image-mini.jpg') %>
        </div>
      </div>
      <div class="comment-text">
        <div class="comment-author clearfix">
          <a href="#" class="link-author"><%= book_comment.user.name %></a>
          <span class="comment-meta">
            <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
          </span>
        </div>
        <div class="comment-entry"><%= book_comment.comment %></div>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy",book_book_comments_path, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>
        <% end %>
      </div>
    </div>
  </span>
<% end %>
