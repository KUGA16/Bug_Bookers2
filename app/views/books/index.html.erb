<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="5"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |books| %>
				<tr>
					<td>
						<%= link_to(books.user) do %>
						<%= attachment_image_tag(books.user, :profile_image, :fill, 34, 34, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to books.title, books, class: "book_#{books.id}" %></td>
					<td><%= books.body %></td>
					<!-- いいね機能 -->
					<td id="favorites-<%= books.id %>">
						<%= render 'favorites/hart', book: books %>
					</td>
					<!--コメント件数 -->
					<td>コメント数：<%= books.book_comments.count %></td>
				</tr>
				<% end %>

			</tbody>
		</table>
		<!--books一覧 -->
	</div>
</div>
